#include "common.h"

float4	main	(float2 uv : TEXCOORD0)	: COLOR
{
	float3	YUV	= tex2D	(s_base, uv);

	float	c	= 1.16406f	;
	float3	_Y	= float3		(c,				c,			c)			*YUV.x	;
	float3	_U	= float3		(0, 			-0.390625f, +2.01562f)	*YUV.y	;
	float3	_V	= float3		(+1.59765f,		-0.8125f,	0)			*YUV.z	;
	float3	_S	= float3		(-0.86961f,		+0.53076f,	-1.0786f)		;
	
	return float4(_Y+_U+_V+_S,1);
}